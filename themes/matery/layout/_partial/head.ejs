<%
    var title = page.title;

    // tags, categories, about pages title
    if (title == 'tags') {
        title = __('tags');
    } else if (title == 'categories') {
        title = __('categories');
    } else if (title == 'about') {
        title = __('about');
    }

    // archives, category, tag pages title
    if (is_archive()) {
        title = __('archives');
        if (is_month()) {
            title += ': ' + page.year + '/' + page.month;
        } else if (is_year()) {
            title += ': ' + page.year;
        }
    } else if (is_category()) {
        title = __('category') + ': ' + page.category;
    } else if (is_tag()) {
        title = __('tag') + ': ' + page.tag;
    }

    // final page title.
    var pageTitle = title ? title + ' | ' + config.title : config.title;

    // keywords.
    var keyWords = config.keywords ? config.keywords : config.title;
    if (page.keywords) {
        keyWords = page.keywords;
    } else {
    	keyWords = title ? title  + ', ' + keyWords : keyWords;
    }

    // description.
    var description = config.description ? config.description : config.title;
    if (page.summary) {
        description = page.summary;
    } else if (page.hasOwnProperty('__post') && page.__post) {
        description = strip_html(page.content).substring(0, 120);
    }

    let iconType = 'image/png'
    let faviconExt = theme.favicon.substr(theme.favicon.lastIndexOf('.') + 1, theme.favicon.length)
    if (faviconExt === 'png') {
        iconType = 'image/png'
    } else if (faviconExt === 'svg') {
        iconType = 'image/svg+xml'
    } else if (faviconExt === 'gif') {
        iconType = 'image/gif'
    } else if (faviconExt === 'jpeg') {
        iconType = 'image/jpeg'
    } else if (faviconExt === 'jpg') {
        iconType = 'image/jpeg'
    } else if (faviconExt === 'ico') {
        iconType = 'image/x-icon, image/vnd.microsoft.icon'
    }

    var siteUrl = (config.url || '').replace(/\/$/, '');
    var pagePath = page.canonical_path || page.path || '';
    var canonicalUrl = siteUrl ? (siteUrl + url_for(pagePath)) : url_for(pagePath);
    var authorName = config.author || config.title;
    var ldImage = null;
    if (page.coverImg) {
        ldImage = siteUrl ? (siteUrl + url_for(page.coverImg)) : url_for(page.coverImg);
    } else if (page.img) {
        ldImage = page.img.startsWith('http') ? page.img : (siteUrl ? (siteUrl + url_for(page.img)) : url_for(page.img));
    } else if (theme.logo) {
        ldImage = siteUrl ? (siteUrl + url_for(theme.logo)) : url_for(theme.logo);
    }
    var ld = {};
    if (page.hasOwnProperty('__post') && page.__post) {
        ld = {
            "@context": "https://schema.org",
            "@type": "BlogPosting",
            "headline": page.title || config.title,
            "description": description,
            "datePublished": page.date ? page.date.toISOString() : undefined,
            "dateModified": page.updated ? page.updated.toISOString() : undefined,
            "author": { "@type": "Person", "name": authorName },
            "publisher": { "@type": "Organization", "name": config.title, "logo": theme.logo ? { "@type": "ImageObject", "url": siteUrl ? (siteUrl + url_for(theme.logo)) : url_for(theme.logo) } : undefined },
            "mainEntityOfPage": { "@type": "WebPage", "@id": canonicalUrl },
            "image": ldImage ? [ldImage] : undefined
        };
    } else {
        ld = {
            "@context": "https://schema.org",
            "@type": "WebSite",
            "name": config.title,
            "description": config.description || config.title,
            "url": siteUrl || canonicalUrl
        };
    }
%>

<head>
    <meta charset="utf-8">
    <meta name="keywords" content="<%= keyWords %>">
    <meta name="description" content="<%= description %>">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="renderer" content="webkit|ie-stand|ie-comp">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="referrer" content="no-referrer-when-downgrade">
    <%- partial('_partial/google-analytics') %>
    <title><%= pageTitle %></title>
    <link rel="icon" type="<%= iconType %>" href="<%- theme.jsDelivr.url %><%- url_for(theme.favicon) %>">
    <script type="application/ld+json"><%- JSON.stringify(ld) %></script>
    <%- partial('_partial/main-style') %>

    <script src="<%- theme.jsDelivr.url %><%- url_for(theme.libs.js.jquery) %>"></script>
    <script>
        window.__vedioList = <%- JSON.stringify(((typeof vedio_list === 'function' ? vedio_list() : ((site.data && site.data.vedio) ? site.data.vedio : []))).map(function (p) { return (theme.jsDelivr.url || '') + url_for(p); })) %>;
    </script>

</head>
