                    <div class="card-image">
                        <%
                            var len = featureImages.length;
                            var num = Math.abs(hashCode(page.prev.title) % len);
                            featureimg = featureImages[num];
                            var prevCoverImg = page.prev.coverImg ? page.prev.coverImg : (page.prev.img ? page.prev.img : featureimg);
                            var prevCoverVideo = page.prev.coverVideo ? page.prev.coverVideo : (page.prev.video ? page.prev.video : null);
                        %>
                        <video class="card-cover-video lazy-video" autoplay muted loop playsinline preload="none"
                               <% if (prevCoverVideo) { %>data-src="<%- prevCoverVideo.startsWith('http') ? prevCoverVideo : (theme.jsDelivr.url + url_for(prevCoverVideo)) %>"<% } else { %>data-random="1"<% } %>></video>
                        <span class="card-title"><%= page.prev.title %></span>
                    </div>
                </a>
                <div class="card-content article-content">
                    <div class="summary block-with-text">
                        <% if (page.prev.summary && page.prev.summary.length > 0) { %>
                            <%- page.prev.summary %>
                        <% } else { %>
                            <%- strip_html(page.prev.excerpt).substring(0, 120) %>
                        <% } %>
                    </div>
                    <div class="publish-info">
